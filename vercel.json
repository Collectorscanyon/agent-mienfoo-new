
{
  "version": 2,
  "buildCommand": "cd api && node build.js",
  "outputDirectory": "api/dist",
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"],
        "runtime": "nodejs20"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.ts",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Neynar-Signature, Content-Type",
        "Access-Control-Max-Age": "86400"
      }
    },
    {
      "src": "/api/health",
      "dest": "/api/health.ts",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type",
        "Cache-Control": "s-maxage=30, stale-while-revalidate"
      }
    },
    {
      "src": "/api",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
