
{
  "version": 2,
  "buildCommand": "cd api && tsc",
  "outputDirectory": "api/dist",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Neynar-Signature, Content-Type",
        "Access-Control-Max-Age": "86400"
      },
      "dest": "/api/webhook.ts"
    },
    {
      "src": "/api/health",
      "methods": ["GET", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type",
        "Cache-Control": "s-maxage=30, stale-while-revalidate"
      },
      "dest": "/api/health.ts"
    },
    {
      "src": "/",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
